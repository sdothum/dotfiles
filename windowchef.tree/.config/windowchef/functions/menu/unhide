[ $TRACE ] && CHILD="menu/unhide $@" . $PARENT

# Windowchef
# ══════════════════════════════════════════════════════════════════════════════

# ........................................................ Unhide hidden windows

windows()  { ls -1 $HIDDEN/* 2>/dev/null | grep -vE '(^|/.*:)$'; }  # remove pathnames and empty lines
finished() { [ -z "$(windows)" ]; }

finished && exit
while window=$(windows | sed "s/\^/&$SEP /" | column -s^ -t  | rmenu 'raise' -no-custom) || exit ;do
	winid=$(echo $window | cut -d' ' -f2)
	mapw -m $winid
	waitron window_focus $winid
	window revert          # to last position
	rm -rf $HIDDEN/$winid  # see window hide
	finished && break
done

# kak: filetype=sh
