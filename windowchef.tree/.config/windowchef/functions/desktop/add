# [ $TRACE ] && CHILD="desktop/add $@" . $PARENT

# Windowchef
# ══════════════════════════════════════════════════════════════════════════════

# ............................................................. Group add window

# Usage: desktop add <group> [<winid>]

W=${2:-$(pfw 2>/dev/null)} || return  # trap empty desktop at startup

rm -rf $GROUP:focus/$1/*
mkdir -p $GROUP:focus/$1/${2:-$W)}

# kak: filetype=sh
