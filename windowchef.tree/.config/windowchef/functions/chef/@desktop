# [ $TRACE ] && CHILD="chef/@desktop $@" . $PARENT

# Windowchef
# ══════════════════════════════════════════════════════════════════════════════

# ............................................................. Windowchef check

# Usage: chef @desktop

winid=$(pfw 2>/dev/null) || return  # trap windowchef autostart initialization errors

desktop=$(find $GROUP -name $winid | cut -d/ -f6)
desktop add $desktop $winid
desktop $desktop

# kak: filetype=sh

