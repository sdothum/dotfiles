[ $TRACE ] && CHILD="chef/theme $@" . $PARENT

# Windowchef
# ══════════════════════════════════════════════════════════════════════════════

# ............................................................ Wallpaper (theme)

# Usage: chef theme [dark | light]

theme() { recipe -/ theme/root | awk '{ gsub(".(png|jpg)", ".theme", $NF); print $NF }'; }

case $1 in
	'' ) [ -e "$(theme)" ] && cat $(theme) || return 1 ;;
	*  ) echo $1 >$(theme) ;;
esac


# kak: filetype=sh
