[ $TRACE ] && CHILD="window/hide $@" . $PARENT

# Windowchef
# ══════════════════════════════════════════════════════════════════════════════

# .................................................................. Hide action

rm -rf $HIDDEN/$winid
mkdir -p $HIDDEN/$winid/"$(desktop) $winid ^$(wname $winid | sed "s/^'//; s/'$//")"  # SEE: menu unhide
save_geometry
mapw -u $winid
waitron window_focus_last
exit  # avoid window (parent) windowunmap

# kak: filetype=sh
