# ......................................................................... 2bwm

sudo xbps-install -y libxcb-devel xcb-util-keysyms-devel xcb-util-wm-devel xcb-util-xrm-devel

cd /home/depot
[ -d 2bwm ] || git clone https://github.com/venam/2bwm.git

cd 2bwm
original config.h
ln -s $HOME/.config/2bwm/src/config.h .
make
sudo make install

