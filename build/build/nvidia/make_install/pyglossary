# ................................................................... pyglossary

cd $HOME
python -m venv venv-pyglossary
. venv-pyglossary/bin/activate
pip3 install pyglossary
pip3 install lxml
pip3 install beautifulsoup4

ln -sf $HOME/venv-pyglossary/bin/pyglossary $HOME/.local/bin

# kak: filetype=sh
