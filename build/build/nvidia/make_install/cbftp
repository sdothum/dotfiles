cd /home/depot
exists --repo cbftp-svn && { cd dict; git pull; cd ..; } || git clone --depth 1 https://github.com/cbftp/cbftp-svn.git

cd cbftp-svn
make clean
make
sudo cp -v ./bin/* /usr/local/bin/

