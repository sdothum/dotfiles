# ............................................................... Kakoune editor

XDG_CONFIG_HOME=${XDG_CONFIG_HOME:-$HOME/.config}
RC=$XDG_CONFIG_HOME/kak/autoload/rc
COLORS=$XDG_CONFIG_HOME/kak/colors
KAKLSP=$XDG_CONFIG_HOME/kak-lsp
mkdir -p ${RC%/*}
mkdir -p $COLORS
mkdir -p $KAKLSP

ln -sf /usr/local/share/kak/rc $RC

