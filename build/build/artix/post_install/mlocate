# ...................................................................... mlocate

ifnsed /etc/updatedb.conf ' .cache Trash backups' '/^PRUNENAMES/s/"$/ .cache Trash backups"/'
ifnsed /etc/updatedb.conf ' /net /bkup' '/^PRUNEPATHS/s|"$| /net /bkup"|'

sudo updatedb &

