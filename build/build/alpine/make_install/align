#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Make_install
# ══════════════════════════════════════════════════════════════════════════════

# ................................................................... perl align

vsn=1.7.5

# perl text align for helix
wget -P /tmp https://kinzler.com/me/align/align-$vsn.tgz
tar zxvf /tmp/align-$vsn.tgz
mv -fv /tmp/align-$vsn /net/depot

cd /net/depot/align-$vsn
make
doas make install

# vim: set ft=sh: #
