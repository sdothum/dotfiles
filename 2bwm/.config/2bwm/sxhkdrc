#
# 2bwm independent hotkeys
#

super + shift + space
	menu

super + control + space
	window snap

super + Return
	scratchpad scratchy

super + shift + Return
	scratchpad itchy

super + control + Return
	term

control + space
	dunstctl close

control + shift + space
	dunstctl close-all

control + BackSpace
	dunstctl history-pop

super + shift + apostrophe
	menu wikis

super + control + apostrophe
	menu notes

super + {0,1}
	window {revert, rotate}

super + shift + 0
	layout revert

super + control + 0
	menu layout

super + 2
	window size monocle

super + {5,6,3}
	window tile 3 {1, 2, 3}

super + {4,8,7,9}
	window tile 4 {1, 2, 3, 4}

alt + {comma,period,0,1,2,3,4,5,6}
	desktop {-1,+1,last, 0, 1, 2, 3, 4, 5}

super + alt + {1,2,3,4,5,6}
	window desktop {0, 1, 2, 3, 4, 5}

super + alt + {comma,period}
	window desktop $(desktop get {-1, +1})

super + shift + {1,2,3,4,5,6}
	window desktop {0, 1, 2, 3, 4, 5} teleport

super + shift + {comma,period}
	window desktop $(desktop get {-1, +1}) teleport

alt + {Left,Down,Up,Right}
	closest.sh {west, south, north, east} $(pfw)

super + alt + {Left,Down,Up,Right}
	window swap {left, down, up, right}

super + control + {p,l,n,f}
	window shift {left, down, up, right}

super + a
	conky clock

super + control + a
	conky clock toggle

super + b
	qutebrowser

super + control + b
	qutebrowser closeall

super + c
	window snap center vertical

super + {shift,control} + c
	window snap {top, bottom}

super + {d,n}
	window snap top {left, right}

super + {shift,control} + d
	toggle {wallpaper, background}

super + {shift,control} + e
	layout {fold 4 kak, level}

# super + control + e
# 	layout level

super + g
	window snap center

super + {control,shift} + g
	window snap center {left, right}

super + i
	window hide

super + shift + i
	menu unhide

super + m
	xdotool search --onlyvisible --classname mail windowclose || aerc

super + shift + m
	menu abook

super + o
	menu scripts

super + shift + o
	menu projects

super + {p,l}
	window snap bottom {left, right}

super + shift + q
	menu halt

super + control + q
	pkill -KILL 2bwm

super + {r,t}
	window snap {right, left}

super + shift + r
	term 2bwm 2make

super + control + r
	2restart

super + shift + s
	menu system

super + u
	btop

super + shift + u
	menu passwords

super + v
	toggle panel

super + shift + v
	menu media

super + control + v
	invert_panel

super + x
	xdotool search --onlyvisible --classname nnn windowclose || nnn TMUX

super + shift + x
	xdotool search --onlyvisible --classname pcmanfm windowclose || pcmanfm

super + control + x
	notify critical 15 nnn '<b>root</b> user' ;\
	xdotool search --onlyvisible --classname root windowclose || nnn ROOT

super + w
	killw $(pfw)

super + shift + w
	menu windowfocus

super + control + w
	menu windowtile

super + alt + w
	menu windowsize

super + Escape
	notify reloading "sxhkd & ruler" ;\
	pkill -USR1 -x sxhkd             ;\
	pkill -USR1 -x ruler

super + shift + Escape
	kak $HOME/.config/2bwm/sxhkdrc $HOME/.config/2bwm/rulerrc

super + button1
	chwso -r $(pfw)
