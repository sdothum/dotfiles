#!/usr/bin/dash
#
# sdothum - 2016 (c) wtfpl

# 2bwm
# ══════════════════════════════════════════════════════════════════════════════

# .................................................................. Window size

actions() {
	echo "Mod+Shift+w   stretch
Mod+0         revert
Mod+1         rotate
Mod+2         monocle
Mod+3         B4
Mod+4         A4
Mod+5         B5
 5r           B5 rotate
Mod+6         A5
Mod+9         B6
 6r           B6 rotate
 8            A6
 7            B7
 7r           B7 rotate"
}

[ $1 ] && cmd=$(actions | grep "Mod[+]$1 ") || cmd=$(actions | rmenu 'Window size' $cmd -no-custom) || exit

cmd=$(echo "$cmd" | sed "s/^[^ ]* *//")
case $cmd in
	revert  ) window revert        ;;
	rotate  ) window rotate        ;;
	stretch ) menu windowstretch   ;;
	*       ) window size $cmd     ;;
esac

# kak: filetype=sh
