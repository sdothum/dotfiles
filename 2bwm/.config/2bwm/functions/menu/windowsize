#!/usr/bin/dash
#
# sdothum - 2016 (c) wtfpl

# 2bwm
# ══════════════════════════════════════════════════════════════════════════════

# .................................................................. Window size

actions() { echo "
Mod+0  revert
Mod+1  rotate
Mod+2  monocle
Mod+3  B4
Mod+4  A4
Mod+5  B5
Mod+6  A5
Mod+7  right
Mod+8  left
Mod+9  B6
"; }

[ $1 ] && cmd=$(actions | grep "+$1 ") || cmd=$(actions | rmenu 'Window size' $cmd -no-custom) || exit

cmd=$(echo "$cmd" | sed "s/Mod.[0-9] *//")
case $cmd in
	revert ) window revert        ;;
	rotate ) window rotate        ;;
	left   ) window stretch left  ;;
	right  ) window stretch right ;;
	near   ) window stretch near  ;;
	far    ) window stretch far   ;;
	*      ) window size $cmd     ;;
esac

# vim: set ft=sh: #
