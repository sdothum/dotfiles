[ $TRACE ] && CHILD="termbg $@" . $PARENT

# 2bwm
# ══════════════════════════════════════════════════════════════════════════════

# .......................................................... Terminal background

# Usage: termbg [rgb:]<hex>, kak prefixes hex code with "rgb:"

# from kak to alacritty
printf "\033]11;#${1#*:}\007"

