#
# 2bwm independent hotkeys
#

super + space
	waitron window_ver_maximize

super + alt + space
	waitron window_hor_maximize

super + shift + space
	menu

super + control + space
	window snap

super + Return
	scratchpad scratchy

super + shift + Return
	scratchpad itchy

super + control + Return
	term

control + space
	dunstctl close

control + shift + space
	dunstctl close-all

control + BackSpace
	dunstctl history-pop

super + shift + apostrophe
	menu wikis

super + control + apostrophe
	menu notes

super + {0,1}
	window {revert, rotate}

super + shift + 0
	layout revert

super + control + 0
	menu layout

super + 2
	window size monocle

super + {5,6,3}
	window tile 3 {1, 2, 3}

super + {4,8,7,9}
	window tile 4 {1, 2, 3, 4}

alt + {comma,period,1,2,3,4,5,6}
	desktop {-1, +1, last, 1, 2, 3, 4, 5, 6}

alt + {comma,period,1,2,3,4,5,6}
	desktop {-1, +1, last, 1, 2, 3, 4, 5, 6}

super + alt + {1,2,3,4,5,6}
	window desktop {1, 2, 3, 4, 5, 6}

super + alt + {comma,period}
	window desktop $(desktop get {-1, +1})

super + shift + {1,2,3,4,5,6}
	window desktop {1, 2, 3, 4, 5, 6} teleport

super + shift + {comma,period}
	window desktop $(desktop get {-1, +1}) teleport

super + alt + ctrl + {1,2,3,4,5,6}
	waitron group_remove_all_windows {1, 2, 3, 4, 5, 6}

super + alt + {Left,Down,Up,Right}
	window swap {left, down, up, right}

super + control + {p,l,n,f}
	window shift {left, down, up, right}

super + a
	conky clock

super + control + a
	conky clock toggle

super + b
	qutebrowser

super + control + b
	qutebrowser closeall

super + c
	window snap center vertical

super + {shift,control} + c
	window snap {top, bottom}

super + {d,n}
	window snap top {left, right}

super + {shift,control} + d
	toggle {wallpaper, background}

super + {shift,control} + e
	layout {fold 4 kak, level}

super + g
	window snap center

super + {control,shift} + g
	window snap center {left, right}

super + i
	window hide

super + shift + i
	menu unhide

super + m
	xdotool search --onlyvisible --classname mail windowclose || aerc

super + shift + m
	menu abook

super + o
	menu scripts

super + shift + o
	menu projects

super + {p,l}
	window snap bottom {left, right}

super + shift + q
	menu halt

super + control + q
	waitron wm_quit 0

super + {r,t}
	window snap {right, left}

super + shift + r
	term 2bwm 2make

super + control + r
	2restart

super + shift + s
	menu system

super + u
	btop

super + shift + u
	menu passwords

super + v
	toggle panel

super + shift + v
	menu media

super + control + v
	invert_panel

super + x
	xdotool search --onlyvisible --classname nnn windowclose || nnn TMUX

super + shift + x
	xdotool search --onlyvisible --classname pcmanfm windowclose || pcmanfm

super + control + x
	notify critical 15 nnn '<b>root</b> user' ;\
	xdotool search --onlyvisible --classname root windowclose || nnn ROOT

super + w
	waitron window_close

super + shift + w
	menu windowfocus

super + control + w
	menu windowtile

super + alt + w
	menu windowsize

super + Escape
	notify reloading "sxhkd & ruler" ;\
	pkill -USR1 -x sxhkd             ;\
	pkill -USR1 -x ruler

super + shift + Escape
	kak $HOME/.config/${WM}/sxhkdrc $HOME/.config/${WM}/rulerrc $HOME/.config/${WM}/windowchefrc

# super + button1
# 	chwso -r $(pfw)

super + control + {Left,Down,Up,Right}
	waitron window_move {-20 0, 0 20, 0 -20, 20 0}

super + control + shift + {Left,Down,Up,Right}
	waitron window_resize {-20 0, 0 20, 0 -20, 20 0}

super + {Left,Down,Up,Right}
	waitron window_move {-50 0, 0 50, 0 -50, 50 0}

super + shift + {Left,Down,Up,Right}
	waitron window_resize {-50 0, 0 50, 0 -50, 50 0}

alt + {Left,Down,Up,Right}
	waitron window_cardinal_focus {left, down, up, right}

super + shift + z
	waitron window_maximize

super + z
	window size monocle

super + Tab
	waitron window_cycle

super + shift + Tab
	waitron window_rev_cycle

super + ctrl + Tab
	waitron window_focus_last

super + ctrl + r
	waitron group_remove_window

