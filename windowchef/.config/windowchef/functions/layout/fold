[ $TRACE ] && CHILD="layout/fold $@" . $PARENT

# 2bwm
# ══════════════════════════════════════════════════════════════════════════════

# .................................................................. Tile layout

usage() { usage: "$(basename $0) by 3 | 4 [<name>]"; exit 1; }

# tile application (name)?
if [ $2 ] ;then
	for i in $winids ;do
		name=$(xdotool getwindowclassname $i)
		[ "$name" = $2 ] && nameids="$nameids $i"
	done
	winids=$nameids
fi

instance=0  # window placement sequence

# .................................................................... By thirds

thirds() {
	for i in $winids ;do
		waitron window_focus $i
		case $instance in
			1 ) window tile 3 1 ;;
			0 ) window tile 3 2 ;;
			2 ) window tile 3 3 ; instance=-1  ;;
		esac
		instance=$(( $instance + 1 ))
	done
}

# .................................................................. By quarters

quarters() {
	for i in $winids ;do
		waitron window_focus $i
		case $instance in
			2 ) window tile 4 1 ;;
			0 ) window tile 4 2 ;;
			1 ) window tile 4 3 ;;
			3 ) window tile 4 4 ; instance=-1 ;;
		esac
		instance=$(( $instance + 1 ))
	done
}

case "$@" in
	3* ) thirds $2   ;;
	4* ) quarters $2 ;;
	*  ) usage ;;
esac

waitron window_focus $winid

# kak: filetype=sh
