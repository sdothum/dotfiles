[ $TRACE ] && CHILD="query/winids $@" . $PARENT

# Windowchef
# ══════════════════════════════════════════════════════════════════════════════

# ....................................................................... winids

desktop=$(xdotool get_desktop)

# convert wmutils hex ids to xdotool decimal id
for i in $(wmctrl -l | grep "^[^ ]*  *$desktop " | cut -d' ' -f1) ;do
	printf "%d\n" $i
done

