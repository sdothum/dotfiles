# ................................................................. Color swatch

# Usage: rice swatch <hex> [<hue>]

# color swatch size to create
size=180x180

if [ $2 ] ;then
	swatch=$PALETTE/$(recipe theme/contrast)/$2
	mkdir -p $swatch || exit 1
	magick -size $size xc:"#$1" $swatch/$1.png
else
	magick -size $size xc:"#$1" $PALETTE/$1.png
fi

# kak: filetype=sh
