[ $TRACE ] && CHILD="menu/windowfocus $@" . $PARENT

# Windowchef
# ══════════════════════════════════════════════════════════════════════════════

# ................................................................. Window focus

winids() { wmctrl -l 2>/dev/null | sed 's/ [ -][0-9]/&   ^/' | picklist; }

winid=$(winids | column -s^ -t | rmenu 'Focus window' $cmd -no-custom) || exit

mapw -m ${winid%% *}
waitron window_focus ${winid%% *}

# kak: filetype=sh
