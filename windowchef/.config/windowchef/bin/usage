#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl
[ $TRACE ] && CHILD="scratchpad $@" . $PARENT

# Windowchef
# ══════════════════════════════════════════════════════════════════════════════

# .............................................................. functions usage

# Usage: usage <verb> <msg>

verb=$(basename $1)
ditto 'notfound' "$verb ${2:-??}"
ditto 'usage' "${BROWN}$verb${TURQUOISE} $(echo $(ls -1 $HOME/.config/$WM/functions/$verb) | sed "s/ / \| /g")"

# kak: filetype=sh
