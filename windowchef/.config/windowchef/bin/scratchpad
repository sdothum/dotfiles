#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl
[ $TRACE ] && CHILD="scratchpad $@" . $PARENT

# Windowchef
# ══════════════════════════════════════════════════════════════════════════════

# ................................................................... Scratchpad

# Usage: scratchpad [name]

xdotool search --onlyvisible --classname ${1:-scratchpad} windowclose || { tmux_session ${1:-scratchpad}; window snap center; }

# kak: filetype=sh
