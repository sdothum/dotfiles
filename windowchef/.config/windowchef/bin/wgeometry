#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl
[ $TRACE ] && CHILD="wgeometry $@" . $PARENT

# Windowchef
# ══════════════════════════════════════════════════════════════════════════════

# ................................................... Window geometry management

# Usage: wgeometry [snapshot | restore] <winid>

# provides window geometry history management
case $1 in
	snapshot ) [ -e $WINFO/${2} ]          && rm -rf $WINFO:snapshot/${2}; cp $WINFO/${2} $WINFO:snapshot/${2} ;;
	restore  ) [ -e $WINFO:snapshot/${2} ] && rm -rf $WINFO/${2};          cp $WINFO:snapshot/${2} $WINFO/${2} ;;
	*        ) notify critical 'wgeometry' "$@" ;;
esac

# kak: filetype=sh
