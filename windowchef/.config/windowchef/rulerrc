#
# ruler for 2bwm
#
class="calibre"
	xdotool key Super+z

class="mail"
	window size monocle        ;\
	waitron group_add_window 4 ;\
	window desktop 4

class="email"
	window tile 4 4 ;\
	waitron group_add_window 4

class="feh"
	window size monocle

class="Firefox"
	window size monocle

class="kak"
	layout tile 4 kak          ;\
	waitron group_add_window 3 ;\
	window desktop 3

class="wiki"
	layout tile 3 wiki         ;\
	waitron group_add_window 5 ;\
	window desktop 5

class="mpv"
	xdotool key Super+Shift+z

class="pavucontrol"
	window size B6 rotate      ;\
	window snap center         ;\
	waitron group_add_window 6 ;\
	waitron group_deactivate 6

class="qutebrowser"
	layout tile 3 qutebrowser

class="Surf"
	window tile 4 1 ;\
	window desktop 2

