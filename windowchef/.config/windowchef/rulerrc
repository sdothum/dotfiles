# WARNING: blank lines before first rule requires patched ruler SEE: dotfiles

class="aerc"
	window desktop $(chef desktop "MAIL")                  ;\
	xdotool search --sync --onlyvisible --classname "aerc" ;\
	window size monocle                                    ;\
	xdotool type ':vsplit' && xdotool key Return

class="audacious"
	window desktop $(chef desktop "DESK") ;\
	window snap center

class="asunder"
	window desktop $(chef desktop "DESK")                                                                    ;\
	[ -e /tmp/rulerrc:asunder ] && waitron window_stack_toggle || { window size 1/3 && window snap center; } ;\
	touch /tmp/rulerrc:asunder

class="cmus"
	window desktop $(chef desktop "DESK") ;\
	window size 1/3 && window snap center

# open compuse window but raise aerc to complete to/subject fields

class="compose"
	window @compose tile 3 2 && window desktop $(chef desktop "MAIL") ;\
	waitron window_stack_toggle

class="calibre"
	window desktop $(chef desktop "BOOK") ;\
	window @calibre snap center

class="feh"
	window size monocle

class="Firefox"
	window size monocle

class="foliate"
	window desktop $(chef desktop "BOOK") ;\
	window size monocle

class="gimp"
	window desktop $(chef desktop "DRAW")

class="kak"
	window desktop $(chef desktop "CODE") ;\
	layout tile 4 kak

class="wiki"
	window desktop $(chef desktop "WIKI") ;\
	layout tile 3 wiki

class="krita"
	window desktop $(chef desktop "DRAW")

class="mpv"
	waitron window_maximize

class="pcmanfm"
	window desktop $(chef desktop "DESK") ;\
	window tile 3

# delay for pavucontrol/pipewire sync SEE: pulse

class="pavucontrol"
	window desktop $(chef desktop "CHEF")                                 ;\
	window size B6 rotate                                                 ;\
	window snap center                                                    ;\
	[ -e $WME:pavucontrol ] && exit                                       ;\
	touch $WME:pavucontrol                                                ;\
	xdotool search --onlyvisible --classname "pavucontrol" windowactivate ;\
	desktop $(chef desktop "CHEF") toggle                                 ;\
	desktop $(chef desktop "DESK")

class="qutebrowser"
	window desktop $(desktop) ;\
	window '@∏ano - qutebrowser' size B6 rotate && window snap center || layout tile 3 qutebrowser

class="Surf"
	sleep 1 ;\
	window '@@cgDIS:T | Gmail' tile 4 1 && window desktop $(chef desktop "CHAT")

class="term"
	window desktop $(desktop) ;\
	layout spread 3 term      ;\
	window snap center vertical

class="zathura"
	window desktop $(chef desktop "BOOK") ;\
	window tile 3 2

# kak: filetype=sh

