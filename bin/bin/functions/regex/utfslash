#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Regex
# ══════════════════════════════════════════════════════════════════════════════

# ........................................................................ Regex

# Usage: .. | utfslash [-]

UTFSLSH='⁄'  # utf-8 slash 0u2044 (filenames may not contain ascii '/' 0u002f)

case $1 in
	'' ) sed "s|/|$UTFSLSH|g" ;;
	*  ) sed "s|$UTFSLSH|/|g" ;;  # restore pathname ascii slashes
esac

# kak: filetype=sh
