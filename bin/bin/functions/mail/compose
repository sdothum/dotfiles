#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Mail
# ══════════════════════════════════════════════════════════════════════════════

# ................................................................. Compose mail

# focus management between aerc and compose windows
trap "xdotool search --onlyvisible --classname mail windowactivate" EXIT

# provide aerc an compose mode with custom linespacing 
# toggle focus defer   # share aerc frame
export MONOFONT="Iosevka-proof"
(sleep 0.25; xdotool search --onlyvisible --classname mail windowraise) &  # must enter to: and subject: FIRST
name=compose offsetY=1 kak NEW WAIT $@

# vim: set ft=sh: #
