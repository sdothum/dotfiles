#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Mail
# ══════════════════════════════════════════════════════════════════════════════

# .................................................................. Mail Client

# export MONOFONT="Iosevka-proof"  # SEE: offsetY, paddingY tweaked line spacing (for 4K display)

# compose directory for temporary eml files
export TMPDIR=~/drafts  # override /tmp (because dir is not persistent in alpine)
MAILDIR=$HOME/Mail
AERC=/usr/bin/aerc
group=$(cat $MAILDIR/.mailsync:group)

# push out any flag and trash changes when finished
trap "mailsync $group" EXIT

notify aerc "<b>Ctrl-v</b>  vsplit\n<b>q</b>      close"
offsetY=6 paddingY=6 term email class=aerc WAIT PAPER OPACITY=1 $AERC

# kak: filetype=sh
