#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Shell
# ══════════════════════════════════════════════════════════════════════════════

# ................................................................ Usage message

# Usage: .. | usage: [ $0 | "<command> <description>" ]
#        $0 assumes dir/script/functions/script folder hierarchy
#        "[[^ ] | < | >] <description>"* | usage:
#           <multiline pipe content> contains "<command> [.] <description>" with successive lines
#           "command . name" in the first line indicates a "compound command" e.g. "make_install iosevka" ..
#              [^ ] (non-blank) -> print below "command"
#              "< "  -> print below "command" (to avoid leading hard tab insertions while editing code)
#              "> "  -> print indented after "command"
#              ">> " -> print indented after "compound command"

USAGE=/tmp/usage:content

if [ "$1" ] ;then
	if [ -e "$1" ] ;then
		name=$(basename $1)
		message="$name $(ls -1 $(dirname $1)/functions/$name | tr '\n' ' ' | sed 's/ $//; s/ / \| /g')"
		echo "${BROWN}Usage: ${WHITE}$(echo "${message:-$1}" | sed -r "s/^ *([^ ]+ )/\1${cyan}/")${NOCOLOR}"
		exit
	else
		echo "$1" >$USAGE
	fi
else
	cat >$USAGE
fi

dotcommand='<off by default>'
command=$(head -1 $USAGE | cut -d' ' -f1 | sed 's/^>//')
indent=$(echo $command | sed 's/./ /g')
if [ $(head -1 $USAGE | cut -d' ' -f2) = '.' ] ;then                       # compound command
	dotcommand=$(head -1 $USAGE | cut -d' ' -f1-3 | sed 's/ \. / [.]* */')  # successive command references do not need dot '.'
	command=$(head -1 $USAGE | cut -d' ' -f1,3)
	indents=$(echo $command | sed 's/./ /g')
fi

# hilight "command name"
echo "${BROWN}Usage: $(sed -r "s/^$dotcommand/$command/; s/($command )/${WHITE}\1${cyan}/g; s/^> /$indent /; s/^>> /$indents /; s/^< /  /g; s/^/       /g; 1s/^ *//;" $USAGE)"

exit 1  # must still exit from parent process

# vim: set ft=sh: #
