#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Shell
# ══════════════════════════════════════════════════════════════════════════════

# .................................................................. Lock script

# Usage: . exec_lock

exec 3>"/tmp/flock:$(basename $0)"
if flock -n 3 2>/dev/null ;then
	echo $$ 1>&3
else
	echo 1>&2 "$(basename $0) already running: exiting."
	exit 1
fi

# vim: set ft=sh: #
