#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Shell
# ══════════════════════════════════════════════════════════════════════════════

# ...................................................... Random string generator

# Usage: rand [ a | l | u | pw ][ n ] [<width>]

while [ $1 ] ;do
	case $1 in
		p*     ) pattern='a-zA-Z0-9!"#$%&'\''()*+,-./:;<=>?@[\]^_`{|}~' ;;  # OWASP password special characters
		a      ) pattern='a-zA-Z'    ;;
		l      ) pattern='a-z'       ;;
		u      ) pattern='A-Z'       ;;
		n      ) pattern='0-9'       ;;
		an     ) pattern='a-zA-Z0-9' ;;
		ln     ) pattern='a-z0-9'    ;;
		un     ) pattern='A-Z0-9'    ;;
		[0-9]* ) width=$1            ;;
	esac
	shift
done

tr -dc ${pattern:-0-9} </dev/urandom | head -c ${width:-5}

# vim: set ft=sh: #
