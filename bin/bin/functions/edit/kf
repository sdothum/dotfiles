#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Edit
# ══════════════════════════════════════════════════════════════════════════════

# ....................................................................... Editor

usage() { usage: "$(basename $0) <search>"; exit 1; }

EDITOR=${EDITOR:-kak}

[ "$1" ] || usage

files=$(a "$@" | fZf --multi | nocolor | cut -d: -f1 | uniq)
[ "$files" ] || exit

echo "$files" | xargs -rt -d'\n' $EDITOR

# kak: filetype=sh
