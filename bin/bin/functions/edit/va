#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Edit
# ══════════════════════════════════════════════════════════════════════════════

# ....................................................................... Editor

usage() { usage: "$(basename $0) <regex>"; exit 1; }

EDITOR=${EDITOR:-kak}

# v by content
[ "$1"     ] && files=$(al "$@") || usage
[ "$files" ] || exit

al "$@" | exclude | sort | xargs -rt -d'\n' $EDITOR

# kak: filetype=sh
