#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# X11 Dynamic Menu
# ══════════════════════════════════════════════════════════════════════════════

# ......................................................... Appointment calendar

REMINDERS=${REMINDERS:-$HOME/.reminders}

ADD='add'
EDIT='edit'

while appmt=$(reminder 52 | sed  "1i$(X $ADD)\n$(X $EDIT)" | rmenu 'Appointment' -no-custom) || exit ;do
	unset error
	case "${appmt#$(X)}" in
		"$ADD" )
			while date=$(echo | rmenu "On date$error") || break ;do
				[ -z "$date" ] && break
				date --date "$date" >/dev/null 2>&1 || { error=": $date ?"; continue; }
				reminder "$date"
				break
			done ;;
	
		"$EDIT")	vi -f -c 'normal|G' $REMINDERS ;;  # helix file:row positions cursor at eof (not last line)
		*      )	vi -f -c "/$(echo ${appmt#*$SEP } | escape)" $REMINDERS ;;
	esac
done

# vim: set ft=sh: #
