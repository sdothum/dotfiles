#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Web
# ══════════════════════════════════════════════════════════════════════════════

# .............................................................. Google hangouts

HANGOUTS=$SESSION/hangouts
BROWSER=surf
export NO_PROXY="*"
URL=$(cat $HANGOUTS)

case $BROWSER in
	luakit ) luakit $URL & ;;
	surf   ) surf -z1.15 -C $(dirname $0)/.hangouts:stylesheet.css $URL & ;;
	*      ) WIDTH=800 DELAY=1.5 qutebrowser $URL & ;;
esac

xsync 'Gmail'
window size B5
window snap left

# vim: set ft=sh: #
