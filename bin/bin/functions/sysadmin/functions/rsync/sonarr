# ................................................................ Rsync wrapper

SUDO=sudo  # SEE: rsync

if server ;then
	ifyes 'backup media server databases to /net/archive' && {
		mkdir -pv /net/archive/var/lib || exit 1
		rsync -r --delete /var/lib/sonarr /net/archive/var/lib/
	}
fi

# kak: filetype=sh
